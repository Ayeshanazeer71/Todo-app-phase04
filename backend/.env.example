# Phase III Todo AI Chatbot - Backend Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# Database Configuration
# For local development with SQLite (default):
DATABASE_URL=sqlite:///./test.db

# For production with Neon PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DBNAME
# Example: DATABASE_URL=postgresql+asyncpg://username:password@ep-cool-lab-123456.us-east-1.aws.neon.tech/todoapp

# Authentication & Security
# Generate a strong secret with: openssl rand -hex 32
# This MUST match the frontend BETTER_AUTH_SECRET
BETTER_AUTH_SECRET=your_strong_secret_here_replace_with_32_char_hex

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_replace_with_strong_value
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenRouter Configuration (Required for AI Chatbot - we use OpenRouter, not OpenAI)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# MCP Server Configuration (Phase III)
# Port for Model Context Protocol server (if running separately)
MCP_SERVER_PORT=8001

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# CORS Settings (for development)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]